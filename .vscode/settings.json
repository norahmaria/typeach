{
  "explorer.fileNesting.enabled": true,

  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "vitest.config.mts, cypress.config.*, .prettierrc.yaml, eslint.config.js",
    "package.json": "package-lock.json, pnpm*",
    ".gitignore": ".prettierignore, .npmignore"
  },

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "cSpell.ignoreWords": [
    "plusplus",
    "vueuse",
    "rushstack",
    "unref",
    "describeby",
    "menuitemradio",
    "menuitemcheckbox",
    "toggletip",
    "treeitem",
    "setsize",
    "highlightjs",
    "unicon",
    "subproject"
  ],

  "cSpell.words": [
    "comparee",
    "Typeahead",
    "describedby",
    "labelledby",
    "haspopup",
    "behaviour",
    "typeach",
    "vuejs",
    "linebreak",
    "paren",
    "parens",
    "listbox",
    "tablist",
    "tabpanel",
    "activedescendant",
    "multiselectable",
    "vitepress"
  ],

  "material-icon-theme.files.associations": {
    "tsconfig.cy.json": "tsconfig",
    "tsconfig.docs.json": "tsconfig"
  }
}
